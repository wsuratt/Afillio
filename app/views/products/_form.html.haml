.container
  = simple_form_for(@product) do |f|
    = f.error_notification
    = f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present?
  
    .form-inputs
      = f.input :title
      %p
      = f.label :image
      .row
      - if @product.image.attached?
        = image_tag @product.image, width: "200px"
      .row
        = @product.image.filename
      .row
      = f.file_field :image
      %small= f.error :image, class: 'text-danger'

      .row
      %p
      = f.input :description
      %p
      = f.input :category, collection: Product.categories, include_blank: true
      %p
      = f.input :quantity
      %p
      = f.input :price_cents, :label => "Price"
      %i Note: Afillio has a 3% platform fee on all sales
      %p
      = f.input :commission_cents, :label => "Commission"
      %p
      = f.label "Show in store"
      = f.check_box :show
      %p
  
    .form-actions
      = f.button :submit
