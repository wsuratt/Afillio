.row.justify-content-center
  .col-md-6
    = link_to 'Products', products_path
    \/
    = link_to @product.title, product_path(@product)
  
    = render 'products/product', product: @product
  
    %p
    .card
      .card-header
        Description
      .card-body
        = @product.description
        %hr
        Sold by: 
        = @product.user.vendor_title
        %br
        Return policy: 
        - if @product.user.return_url.blank?
          No refunds or returns
        -else
          = link_to @product.user.return_url

    - if @product.quantity > 0
      .text-center
        %p
        = @svg.html_safe
        %p
        %input#myInput{:type => "text", :value => request.base_url + "/orders/" + @product.slug + "/" + @user.referral_token}/
        %button{:class => "btn btn-sm btn-custom", :onclick => "myFunction()"}
          .fa.fa-clipboard
      :javascript
        function myFunction() {
          /* Get the text field */
          var copyText = document.getElementById("myInput");
        
          /* Select the text field */
          copyText.select();
          copyText.setSelectionRange(0, 99999); /* For mobile devices */
        
          /* Copy the text inside the text field */
          document.execCommand("copy");
        
          /* Alert the copied text */
          // alert("Copied the text: " + copyText.value);
        }
    - else
      .text-center
        %p
        %h3.text-danger
          Out of Stock