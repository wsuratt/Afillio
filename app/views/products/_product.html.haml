.card
  .card-header
    .fa.fa-shopping-bag
    = link_to product.title, product_path(product)
  .card-footer
    .text-center
      Price:
      = number_to_currency(product.price_cents)
      .row
      Commission:
      = number_to_currency(product.commission_cents)
  - if current_user
    - if policy(product).edit?
      .card-footer
        = link_to 'Edit', edit_product_path(product), class: 'btn btn-sm btn-warning'
        = link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-sm btn-danger'