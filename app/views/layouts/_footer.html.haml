          = link_to 'About us', about_us_path, { :class=>"footer_links" }
        .mt-3
          = link_to 'Terms and conditions', terms_conditions_path, { :class=>"footer_links" }
        .mt-3
          = link_to 'Privacy policy', privacy_policy_path, { :class=>"footer_links" }
        .mt-3
          .fa.fa-envelope.text-center.footer_links
            = mail_to 'support@afillio.com', 'support@afillio.com', class: "footer_links"
