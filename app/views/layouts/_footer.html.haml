  %section
    .container
      .row.justify-content-center.row-cols-1.row-cols-2.row-cols-lg-3.text-center
        .mt-3
          = link_to 'Vendor welcome', welcome_path, { :class=>"footer_links" }
        .mt-3
          - if current_user
            = link_to 'Become a Vendor', vendor_info_user_path(current_user), { :class=>"footer_links" }
