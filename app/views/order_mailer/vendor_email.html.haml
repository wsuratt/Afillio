            %tr
              %td{:align => "center", :bgcolor => "#ffffff", :style => "padding: 10px 35px 20px 35px; background-color: #ffffff;"}
                %table{:align => "center", :border => "0", :cellpadding => "0", :cellspacing => "0", :style => "max-width:600px;", :width => "100%"}
                  %tr
                    %td{:align => "center", :style => "font-family: Open Sans, Helvetica, Arial, sans-serif; font-size: 16px; font-weight: 400; line-height: 24px; padding-top: 15px;"}
